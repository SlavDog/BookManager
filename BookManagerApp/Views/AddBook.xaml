<Window x:Class="BookManagerApp.Views.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManagerApp.Views" xmlns:sys="clr-namespace:System;assembly=netstandard"
        mc:Ignorable="d"
        Title="AddBook" Height="400" Width="450">
    <Grid>
        <Grid.Background>
        <LinearGradientBrush EndPoint="-0.5,-0.5" StartPoint="0.5,0.5">
            <GradientStop Color="#FFF3DDC0"/>
            <GradientStop Color="#FFDAB3DC" Offset="1"/>
        </LinearGradientBrush>
        </Grid.Background>
        <Grid Width="300" Height="300">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Foreground="#FF232323" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18">Book to add:</Label>
            <Label Grid.Row="1" Grid.Column="0" Foreground="#FF232323" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" FontSize="11">Title:</Label>
            <TextBox Text="{Binding Title}" Grid.Row="1" Grid.Column="1" Padding="4" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Background="#FFF0F0F0" Foreground="#FF232323" BorderBrush="#FFFCB969" Height="25" Cursor="IBeam"/>
            <Label Grid.Row="2" Grid.Column="0" Foreground="#FF232323" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" FontSize="11">Author:</Label>
            <TextBox Text="{Binding Author}" Grid.Row="2" Grid.Column="1" Padding="4" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Background="#FFF0F0F0" Foreground="#FF232323" BorderBrush="#FFFCB969" Height="25" Cursor="IBeam"/>
            <Label Grid.Row="3" Grid.Column="0" Foreground="#FF232323" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" FontSize="11">Finish date:</Label>
            <DatePicker  DisplayDate="{x:Static sys:DateTime.Today}" SelectedDate="{Binding FinishDate}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200"/>
            <Label Grid.Row="4" Grid.Column="0" Foreground="#FF232323" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" FontSize="11">Rating:</Label>
            <Grid Grid.Row="4" Grid.Column="1" Width="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Foreground="#FF232323" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0">👎</Label>
                <Slider Value="{Binding Rating}" IsSnapToTickEnabled="True" Margin="0 5 0 0" Minimum="0" Maximum="5" Grid.Column="1" TickPlacement="BottomRight" AutoToolTipPlacement="BottomRight" Foreground="#FF3D3D3D"/>
                <Label Foreground="#FF232323" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2">👍</Label>
            </Grid>
            <Label Grid.Row="5" Grid.Column="0" Foreground="#FF232323" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" FontSize="11">Bookshelf:</Label>
            <ComboBox ItemsSource="{Binding Bookshelves}" SelectedItem="{Binding Bookshelf}" Height="24" Grid.Row="5" Grid.Column="1" Width="200" Background="#FFF0F0F0" BorderBrush="{x:Null}" Foreground="#FF232323"/>
            <ComboBox ItemsSource="{Binding Genres}" SelectedItem="{Binding Genre}" Height="24" Grid.Row="6" Grid.Column="1" Width="200" Background="#FFF0F0F0" BorderBrush="{x:Null}" Foreground="#FF232323"/>
            <Label Grid.Row="6" Grid.Column="0" Foreground="#FF232323" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" FontSize="11">Genre:</Label>
            <Button Command="{Binding AddBookCommand}" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Padding="4" Content="Add book" HorizontalAlignment="Center" VerticalAlignment="Center" Width="275" Height="35"  FontFamily="Segoe UI Variable Small Semibold" Cursor="Hand" BorderBrush="{x:Null}">
                <Button.Background>
                    <LinearGradientBrush EndPoint="-1,0" StartPoint="1,0">
                        <GradientStop Color="#FFFC00FF" Offset="0"/>
                        <GradientStop Color="#FFFFAF41" Offset="0.6"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label HorizontalAlignment="Center" Grid.Row="8" Grid.ColumnSpan="2" Content="{Binding ShowText}"/>
        </Grid>
    </Grid>
</Window>
