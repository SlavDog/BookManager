<Window x:Class="BookManagerApp.Views.Graph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManagerApp.Views"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.WPF"
        mc:Ignorable="d"
        Title="Graph" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="-0.5,-0.5" StartPoint="0.5,0.5">
                <GradientStop Color="#FFF3DDC0"/>
                <GradientStop Color="#FFDAB3DC" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Command="{Binding CreateMonthCommand}" Grid.Column="0" Grid.Row="0" Padding="4" Content="Month" HorizontalAlignment="Center" Margin="4" VerticalAlignment="Center" Width="200" FontFamily="Segoe UI Variable Small Semilight" Cursor="Hand" BorderBrush="{x:Null}">
            <Button.Background>
                <LinearGradientBrush EndPoint="-1,0" StartPoint="1,0">
                    <GradientStop Color="#FFFC00FF" Offset="0"/>
                    <GradientStop Color="#FFFFAF41" Offset="0.6"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button Command="{Binding CreateYearCommand}" Grid.Column="1" Grid.Row="0" Padding="4" Content="Year" HorizontalAlignment="Center" Margin="4" VerticalAlignment="Center" Width="200" FontFamily="Segoe UI Variable Small Semilight" Cursor="Hand" BorderBrush="{x:Null}">
            <Button.Background>
                <LinearGradientBrush EndPoint="-1,0" StartPoint="1,0">
                    <GradientStop Color="#FFFC00FF" Offset="0"/>
                    <GradientStop Color="#FFFFAF41" Offset="0.6"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <oxy:PlotView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Model="{Binding PlotModel}" />
        <Label Content="{Binding TextToShow}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
    </Grid>
</Window>
